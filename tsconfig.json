{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ESNext"],         
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,                              
    "declarationMap": true,                           
    "sourceMap": true,                                
    "outDir": "./dist",                                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                             
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*.ts"
  ]
}
